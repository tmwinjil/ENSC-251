void checkWinner(int compChoice, int userChoice)
{
	int diff=compChoice-userChoice;
	if (diff==1 || diff==-2)
	{
		cout<<"Computer Wins"<<endl;
	}
	else if (diff==0)
	{
		cout<<"There is no winner. PLAY AGAIN"<<endl;
	}
	else
	{
		cout<<"Congratulations!!! You win"<<endl;
	}

}

